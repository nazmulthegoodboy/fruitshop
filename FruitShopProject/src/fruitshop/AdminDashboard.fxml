<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="fruitshop.AdminDashboardController" style="-fx-background-color: linear-gradient(to bottom right, #f0f8ff, #a3cef1);">
    <top>
        <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: #2c3e50; -fx-padding: 12 20; -fx-border-color: #34495e; -fx-border-width: 0 0 2 0; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 4,0,0,1);">
            <Label text="ðŸ Admin Panel" style="-fx-text-fill: #ecf0f1; -fx-font-size: 20px; -fx-font-weight: bold;" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button text="Logout" fx:id="logoutBtn" onAction="#onLogout" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 18; -fx-cursor: hand;" />
        </HBox>
    </top>

    <center>
        <TableView fx:id="fruitTable" prefHeight="400" style="-fx-background-color: #ecf0f1; -fx-font-size: 14px;">
            <columns>
                <TableColumn text="Fruit Name" fx:id="nameCol" prefWidth="250" />
                <TableColumn text="Price" fx:id="priceCol" prefWidth="130" />
                <TableColumn text="Stock" fx:id="stockCol" prefWidth="130" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="12" alignment="CENTER" style="-fx-background-color: #34495e; -fx-padding: 15 20; -fx-border-color: #2c3e50; -fx-border-width: 2 0 0 0; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 4,0,0,-1);">
            <TextField fx:id="nameField" promptText="Fruit Name" style="-fx-pref-width: 140px; -fx-padding: 8 10; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #7f8c8d; -fx-font-size: 14px; -fx-focus-color: #3498db; -fx-faint-focus-color: transparent;" />
            <TextField fx:id="priceField" promptText="Price" style="-fx-pref-width: 140px; -fx-padding: 8 10; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #7f8c8d; -fx-font-size: 14px; -fx-focus-color: #3498db; -fx-faint-focus-color: transparent;" />
            <TextField fx:id="stockField" promptText="Stock" style="-fx-pref-width: 140px; -fx-padding: 8 10; -fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #7f8c8d; -fx-font-size: 14px; -fx-focus-color: #3498db; -fx-faint-focus-color: transparent;" />
            <Button text="Add" fx:id="addBtn" onAction="#onAdd" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 18; -fx-cursor: hand;" />
            <Button text="Update" fx:id="updateBtn" onAction="#onUpdate" style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 18; -fx-cursor: hand;" />
            <Button text="Delete" fx:id="deleteBtn" onAction="#onDelete" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 8 18; -fx-cursor: hand;" />
        </HBox>
    </bottom>
</BorderPane>
