<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="fruitshop.LoginController" style="-fx-background-color: linear-gradient(to bottom right, #ffe5ec, #ff9a9e);">
    <center>
        <VBox alignment="CENTER" spacing="15" style="-fx-background-color: white; -fx-padding: 30; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8,0,0,4);">
            <Label text="ðŸ“ Fruit Shop" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #d6336c;"/>
            
            <TextField fx:id="usernameField" promptText="Username" 
                       style="-fx-pref-width: 280px; -fx-padding: 10 14; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #d6336c; -fx-font-size: 14px;" />
            
            <PasswordField fx:id="passwordField" promptText="Password" 
                           style="-fx-pref-width: 280px; -fx-padding: 10 14; -fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #d6336c; -fx-font-size: 14px;" />
            
            <HBox alignment="CENTER" spacing="15">
                <Button text="Login" fx:id="loginBtn" onAction="#onLogin" 
                        style="-fx-background-color: #d6336c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 30; -fx-cursor: hand;" />
                
                <Button text="Sign Up" fx:id="signupBtn" onAction="#onSignUp" 
                        style="-fx-background-color: #ff7f9e; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 10; -fx-padding: 10 30; -fx-cursor: hand;" />
            </HBox>
            
            <Label text="(Admin: admin/admin  â€” Customer: user/user)" style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
        </VBox>
    </center>
</BorderPane>
